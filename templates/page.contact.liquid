{% comment %}
  Contact page template
{% endcomment %}

<section class="page-section">
  <h1 class="section-title">Contact Us</h1>
  
  <div class="section-content text-center mb-lg">
    <p>Have a question or want to collaborate? We'd love to hear from you!</p>
  </div>
  
  <form 
    action="{{ routes.root_url }}contact#contact_form" 
    method="post" 
    accept-charset="UTF-8"
    class="contact-form"
    id="contact_form"
  >
    {%- form 'contact' -%}
      {%- if form.posted_successfully? -%}
        <div style="background-color: rgba(0, 255, 0, 0.1); border: 2px solid rgba(0, 255, 0, 0.5); padding: var(--space-3); margin-bottom: var(--space-4); text-align: center; box-shadow: 0 0 20px rgba(0, 255, 0, 0.3); border-radius: 4px; color: var(--text-primary);">
          <strong style="text-transform: uppercase; letter-spacing: 0.1em;">Thank you!</strong><br>
          We'll get back to you soon.
        </div>
      {%- endif -%}
      
      {%- if form.errors -%}
        <div style="background-color: rgba(255, 0, 0, 0.1); border: 2px solid rgba(255, 0, 0, 0.5); padding: var(--space-3); margin-bottom: var(--space-4); box-shadow: 0 0 20px rgba(255, 0, 0, 0.3); border-radius: 4px; color: var(--text-primary);">
          <p style="font-weight: 700; margin-bottom: var(--space-2); text-transform: uppercase; letter-spacing: 0.1em;">Please correct the following errors:</p>
          <ul style="list-style: none; padding: 0;">
            {%- for field in form.errors -%}
              <li style="margin-bottom: var(--space-1);">â€¢ {{ form.errors[field] }}</li>
            {%- endfor -%}
          </ul>
        </div>
      {%- endif -%}
      
      <div class="form-group">
        <label for="ContactForm-name" class="form-label">Name</label>
        <input 
          type="text" 
          id="ContactForm-name"
          name="contact[name]"
          class="form-input"
          required
        >
      </div>
      
      <div class="form-group">
        <label for="ContactForm-email" class="form-label">Email</label>
        <input 
          type="email" 
          id="ContactForm-email"
          name="contact[email]"
          class="form-input"
          required
        >
      </div>
      
      <div class="form-group">
        <label for="ContactForm-phone" class="form-label">Phone (Optional)</label>
        <input 
          type="tel" 
          id="ContactForm-phone"
          name="contact[phone]"
          class="form-input"
        >
      </div>
      
      <div class="form-group">
        <label for="ContactForm-message" class="form-label">Message</label>
        <textarea 
          id="ContactForm-message"
          name="contact[body]"
          class="form-textarea"
          required
        ></textarea>
      </div>
      
      <button type="submit" class="submit-button">Send Message</button>
    {%- endform -%}
  </form>
  
  <div class="text-center mt-lg">
    <h2 style="font-family: var(--font-manga); font-size: clamp(1.5rem, 3vw, 2rem); margin-bottom: var(--space-3); text-shadow: 0 0 20px var(--glow-primary), 0 0 40px var(--glow-secondary); text-transform: uppercase; letter-spacing: 0.1em; font-weight: 900;">
      Follow Us
    </h2>
    <p style="color: var(--text-secondary); font-size: 1.1rem;">
      Stay connected with us on social media for the latest updates and new releases.
    </p>
  </div>
</section>

