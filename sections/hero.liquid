<section class="hero speed-lines">
  <div class="hero-content">
    <div class="hero-title-wrapper" style="position: relative; display: inline-block;">
      <h1 class="hero-title">{{ section.settings.hero_title | default: 'TOKYO PANEL' }}</h1>
      <div class="manga-panel-decoration" style="position: absolute; top: -10px; right: -20px; width: 60px; height: 60px; border: 2px solid var(--glow-primary); opacity: 0.3; transform: rotate(45deg); box-shadow: 0 0 20px var(--glow-primary);"></div>
      <div class="manga-panel-decoration" style="position: absolute; bottom: -10px; left: -20px; width: 40px; height: 40px; border: 2px solid var(--glow-secondary); opacity: 0.2; transform: rotate(-45deg); box-shadow: 0 0 15px var(--glow-secondary);"></div>
    </div>
    <p class="hero-slogan">{{ section.settings.hero_slogan | default: 'Wearable Manga Panels' }}</p>
    <a href="{{ section.settings.cta_link | default: routes.collections_url }}" class="cta-button">
      {{ section.settings.cta_text | default: 'Shop Now' }}
    </a>
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero Title",
      "default": "TOKYO PANEL"
    },
    {
      "type": "text",
      "id": "hero_slogan",
      "label": "Hero Slogan",
      "default": "Wearable Manga Panels"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}

