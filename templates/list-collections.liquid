{% comment %}
  Collections listing page template
{% endcomment %}

<section class="page-section">
  <h1 class="section-title">Our Collections</h1>
  
  <div class="product-grid" style="grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));">
    {%- for collection in collections -%}
      {%- unless collection.handle == 'frontpage' -%}
        <a href="{{ collection.url }}" class="product-card" style="text-decoration: none; color: inherit;">
          {%- if collection.featured_image -%}
            <img 
              src="{{ collection.featured_image | image_url: width: 600 }}"
              alt="{{ collection.featured_image.alt | escape }}"
              class="product-image"
              loading="lazy"
            >
          {%- else -%}
            <div class="product-image" style="background-color: var(--bg-primary); display: flex; align-items: center; justify-content: center;">
              <span>No Image</span>
            </div>
          {%- endif -%}
          <h3 class="product-title">{{ collection.title }}</h3>
          <p style="color: var(--text-secondary); position: relative; z-index: 2;">{{ collection.products_count }} {{ collection.products_count | pluralize: 'product', 'products' }}</p>
        </a>
      {%- endunless -%}
    {%- endfor -%}
  </div>
</section>

